<div id="virtualclassScreenShare" class="virtualclass ">
  {{#if control}}

    {{#if recImg}}
      <div id="virtualclassScreenShareLocalTemp">
        <canvas id="virtualclassScreenShareLocalTempVideo" width="1440" height="738"></canvas>
      </div>
    {{else}}
      <div id="virtualclassScreenShareLocal" class="Local " style="position: relative;">
        <video id="virtualclassScreenShareLocalVideo" autoplay="true" src=" "></video>
      </div>

    <div id="virtualclassScreenShareLocalSmall" class="Local ">
      <video id="virtualclassScreenShareLocalVideosmall" autoplay="true" src=" "></video>

      <h3 id="screenShrMsg" class="alert alert-info">{{getString 'screensharemsg'}}</h3>
      {{#if scrctrl}}
        <div id="stopScreenShare" class="ss" data-title="{{getString 'ssStop'}}">
          <button type="button"> {{getString 'ssBtn'}}</button>
        </div>
      {{/if}}
    </div>
    {{/if}}

  {{else}}
    <div id="virtualclassScreenShareLocal" class="Local">
      <canvas id="virtualclassScreenShareLocalVideo" width="886" height="724"></canvas>
    </div>
    {{#if scrctrl}}
      <div id="screenController">
        <div class="share selfView">
          <button type="button">{{getString 'sharetoall'}}</button>
        </div>
      </div>
      {{/if}}
  {{/if}}

  {{#if control}}
    {{#unless recImg}}
      <div id="virtualclassScreenShareLocalTemp">
        <canvas id="virtualclassScreenShareLocalTempVideo" width="900" height="740"></canvas>
      </div>
    {{/unless}}

    {{else}}
      {{#if scrctrl}}
        <div id="stopScreenShare" class="ss" data-title="{{getString 'ssStop'}}">
          <button type="button"> {{getString 'ssBtn'}}</button>
        </div>
      {{/if}}
    {{/if}}
</div>